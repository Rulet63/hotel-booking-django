# Конфигурация приложения Hotel Booking
# Скопируйте этот файл как config.yaml и заполните значениями

database:
  name: hotel_db
  user: hotel_user
  password: your_secure_password
  host: localhost
  port: 5432

django:
  secret_key: your-secret-key-here-change-in-production
  debug: true
  allowed_hosts:
    - localhost
    - 127.0.0.1

email:
  host: smtp.gmail.com
  port: 587
  username: your-email@gmail.com
  password: your-email-password

logging:
  level: INFO
  file: logs/app.log
